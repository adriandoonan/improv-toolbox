---
import Drawer from "../components/Drawer.astro";
const {
  title = "Improv Toolbox",
  description = "Exercises, warmups, forms, and show tools.",
  themeColor = "#ff2f55",
} = Astro.props;
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/exercises", label: "Exercises" },
  { href: "/forms", label: "Forms" },
  { href: "/warmups", label: "Warmups" },
  { href: "/tools", label: "Tools" },
];
const currentPath = Astro.url.pathname;
const currentYear = new Date().getFullYear();
const isActive = (href: string) =>
  href === "/" ? currentPath === "/" : currentPath.startsWith(href);
---

<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="theme-color" content={themeColor} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Epilogue:wght@600;700&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/styles/theme.css" />
    <link rel="stylesheet" href="/styles/every.css" />

    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="icon" href="/icons/icon-192.png" sizes="192x192" />
    <link rel="apple-touch-icon" href="/icons/icon-192.png" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-capable" content="yes" />
  </head>
  <body>
    <header class="app-bar" role="banner">
      <div class="app-bar__inner">
        <div class="app-bar__brand">
          <a class="app-logo" href="/">Improv Toolbox</a>
          <span class="app-tagline">Warmups · Forms · Tools</span>
        </div>
        <div class="app-bar__actions">
          <Drawer title="Navigate" links={navLinks}>
            <p class="app-tagline">Plan, teach, and play on the fly.</p>
          </Drawer>
          <a class="app-cta" href="/tools/timer">Quick timer</a>
        </div>
      </div>
      <nav class="tab-nav" aria-label="Primary navigation">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              aria-current={isActive(link.href) ? "page" : undefined}
            >
              {link.label}
            </a>
          ))
        }
      </nav>
    </header>
    <main class="page-shell stack">
      <slot />
    </main>
    <footer class="site-footer">
      <small>© {currentYear} Improv Toolbox Collective</small>
    </footer>

    <script>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker.register("/sw.js").catch(() => {});
      }
    </script>
  </body>
</html>
